{% extends 'base.html.twig' %}

{% block title %}AssurPlus - Déclaration de sinistre{% endblock %}

{% block body %}
<div class="container">

    <h1 class="my-4">Déclarer votre sinistre</h1>

    {# display a flash message #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-dismissible alert-{{ label }}">
                <p> {{ message }} </p>
            </div>
        {% endfor %}
    {% endfor %}

    {# display form #}
    
    {{ form_start(form) }}
        {{ form_row(form.adressOfSinister) }}
        {{ form_row(form.description) }}
        {{ form_row(form.numberRegistration) }}
        <div class="form-group d-flex">
            {{ form_row(form.submit) }}
            <div class="mb-3">
                <a href="/" class="mx-3 btn btn-secondary" id="declaration_sinister_cancel">Annuler<a>
            </div>
        </div>
    {{ form_end(form) }}
    
</div>

    
{% endblock %}
