{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <section class="d-flex justify-content-center " style="min-height: 90vh">
        <div style="max-width: 400px" class="d-flex flex-column justify-content-center align-items-center ">
            <form action="{{ path('app_login') }}" method="post" class="d-flex flex-column">
                <h5>Vous devez vous identifier</h5>
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}">

                <label for="password" class="mt-2">Mot de passe:</label>
                <input type="password" id="password" name="_password">

                {# If you want to control the URL the user is redirected to on success
                <input type="hidden" name="_target_path" value="/account"> #}
                <button type="submit" class="btn btn-primary mt-3">Se connecter</button>
            </form>
            <div>
                <a href= {{path('app_registration')}} class="btn btn-link">Cr√©er un compte</a>
            </div>
        </div>
    </section>

    
{% endblock %}